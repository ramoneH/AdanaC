extends layout

block content
  div.container-fluid.col-md-6
    .alert.alert-info
      h1(style='text-align: center')= title
      
      .container-fluid
        
          .form-area.alert-warning
            form#formAddTasks(name="addtask",method="post",action="/addtask")
              br(style='clear:both')
              h3(style='margin-bottom: 25px; text-align: center;') Task Form
              .form-group
                input#inputTaskName.form-control(type='text', name='taskname', placeholder='Task Name', required='')
              .form-group
                input#inputTaskDesc.form-control(type='text', name='taskdesc', placeholder='Task Desc', required='')
              .form-group
                input#inputTaskComp.form-control(type='text', name='taskcomp', placeholder='Completed ?', required='')
              .form-group
                input#inputTaskAss.form-control(type='text', name='taskass', placeholder='Assigned ?', required='')
              button#submit.btn.btn-primary.pull-right(type='submit', name='addtask') ADD NEW TASK
              button.btn.btn-primary.pull-left() 
                  a(style="color: #ffffff" href="/") CANCEL