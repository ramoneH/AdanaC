extends layout

block content
    div.container-fluid.col-md-6
        .alert.alert-info
            h1(style="text-align: center") OFFICIAL USER LIST 
            br
            form(method="get", action="/addtasks")
                button.btn.btn-success.pull-right(type="submit") ADD A NEW USER NOW
            br
            br
            .alert.alert-warning
                table.table.table-bordered.table-light
                    thead.thead-dark
                        tr
                            th(scope='col') Full Name
                            th(scope='col') Address
                            th(scope='col') Age
                            th(scope='col') Phone
                            th(scope='col') Delete ?
                    tbody
                        for task, i in tasks
                            tr
                                td
                                    a(for task, i in users, href="/tasks/#{task._id}")= task.name 
                                td= task.address
                                td= task.age
                                td= task.phone
                                td
                                    form(method="delete", action="/deletetask/#{task._id}")
                                        button.btn.btn-danger(type="submit") Delete Me
                        else
                            tr 
                                td sorry no Users At This Time Add Users
            form(method="get", action="/")
                button.btn.btn-warning(type="submit") HOME