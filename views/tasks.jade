extends layout

block content
    div.container-fluid
        .alert.alert-info
            h1
                Task List
            br
            form(method="get", action="/addtasks")
                button.btn.btn-primary(type="submit") ADD A NEW TASK NOW
            br
            br
            .alert.alert-warning
                table.table.table-bordered.table-light
                    thead.thead-dark
                        tr
                            th(scope='col') Task
                            th(scope='col') Description
                            th(scope='col') Completed
                            th(scope='col') Assigned
                            th(scope='col') Delete ?
                    tbody
                        for task, i in tasks
                            tr
                                td
                                    a(for task, i in tasks, href="/tasks/#{task._id}")= task.task 
                                td= task.desc
                                td= task.comp
                                td= task.ass
                                td
                                    form(method="delete", action="/deletetask/#{task._id}")
                                        button.btn.btn-primary(type="submit") Delete Me
                        else
                            tr 
                                td sorry no tasks
            form(method="get", action="/")
                button.btn.btn-primary(type="submit") HOME