extends layout

block content
    h1= title
    p Welcome to #{title}


    button.btn.btn-primary() 
        a(style="color: #ffffff" href="/tasks") TASK LIST

    table.table.table-bordered.table-dark
        thead
            tr
                th(scope='col') #
                th(scope='col') First
                th(scope='col') Last
                th(scope='col') Handle
        tbody
            tr
                th(scope='row') 1
                td Mark
                td Otto
                td @mdo
            tr
                th(scope='row') 2
                td Jacob
                td Thornton
                td @fat
            tr
                th(scope='row') 3
                td(colspan='2') Larry the Bird
                td @twitter